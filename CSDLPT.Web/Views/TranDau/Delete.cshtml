@model CSDLPT.Web.Models.TranDau

@{
    ViewData["Title"] = "Xóa Trận Đấu";
}

<h1>@ViewData["Title"]</h1>

<h3>Bạn có chắc chắn muốn xóa trận đấu này?</h3>
<div>
    <h4>Trận Đấu</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaTD)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaTD)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgayThiDau)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayThiDau)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaSan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaSan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LuotDau)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LuotDau)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VongDau)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VongDau)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaTD" />
        <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
    </form>
</div>