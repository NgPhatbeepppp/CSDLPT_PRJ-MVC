@model CSDLPT.Web.Models.DoiBong
@{
    ViewData["Title"] = "Chi tiết Đội bóng";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Đội bóng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã Đội Bóng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaDB)
        </dd>
        <dt class="col-sm-2">
            Tên Đội Bóng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenDB)
        </dd>
        <dt class="col-sm-2">
            Mã Sân
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaSan)
        </dd>
        <dt class="col-sm-2">
            Huấn Luyện Viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HLV)
        </dd>
        <dt class="col-sm-2">
            Câu Lạc Bộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CLB)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Node)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Node)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MaDB" class="btn btn-primary">Chỉnh sửa</a> |
    <a asp-action="Index">Trở về Danh sách</a>
</div>